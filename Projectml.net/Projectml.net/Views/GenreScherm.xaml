<Window x:Class="Projectml.net.Views.GenreScherm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projectml.net.Views"
        mc:Ignorable="d"
        Title="GenreScherm" Height="450" Width="800">
    <Grid>
        <Button Content="Train Model" HorizontalAlignment="Left" Margin="45,40,0,0" VerticalAlignment="Top" Width="142" Command="{Binding}" CommandParameter="Train"/>
        <Label Content="{Binding IsTraining}" HorizontalAlignment="Left" Margin="45,76,0,0" VerticalAlignment="Top" Height="25" Width="142"/>

        <TextBox HorizontalAlignment="Left" Height="23" Margin="217,155,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Width="340"/>
        <Button Content="Check Genre" HorizontalAlignment="Left" Margin="347,198,0,0" VerticalAlignment="Top" Width="125" Height="32" RenderTransformOrigin="-0.164,0.476" Command="{Binding}" CommandParameter="CheckSentiment"/>
        <Label Content="{Binding Result}" HorizontalAlignment="Left" Margin="217,240,0,0" VerticalAlignment="Top"/>
        <Button Content="Save Model" HorizontalAlignment="Left" Margin="236,40,0,0" VerticalAlignment="Top" Width="169" Command="{Binding}" CommandParameter="SaveModel" />
    </Grid>
</Window>
